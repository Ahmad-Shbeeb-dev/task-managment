{
  "cli": {
    "version": ">= 3.3.0"
  },
  "build": {
    "base": {
      "node": "18.16.1",
      // "pnpm": "8.15.1",
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "extends": "base",
      // "developmentClient": true
      "android": { "buildType": "apk" },
      "env": {
        "GOOGLE_SERVICES_JSON": "./google-services.json"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
